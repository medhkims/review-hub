rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Authenticated users can read and write their own files
    match /users/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Public read access for profile pictures
    match /profile_pictures/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Post images - authenticated users can read, only owner can write
    match /posts/{postId}/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }

    // Chat attachments - only conversation participants can access
    match /chat/{conversationId}/{allPaths=**} {
      allow read, write: if request.auth != null;
    }
  }
}
